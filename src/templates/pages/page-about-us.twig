{% extends "base.twig" %} {% block content %}
<section id="about-hero">
  <div class="content-wrapper about--hero--content-wrapper pad">
    <h1 class="text--h1 title">
      {{ post.hero_title }}
    </h1>
  </div>

  <img
    class="banner--img"
    src="{{ Image(post.hero_banner_image).src }}"
    alt="{{ Image(post.hero_banner_image).alt }}"
  />
</section>

<section id="mission" class="pos-rel">
  <div class="content-wrapper split--content-wrapper reverse pad flex-parent">
    <div class="img-wrapper">
      <div
        class="purpose-img img img-background"
        style="background-image: url({{
          Image(post.mission_section_image).src
        }});"
        aria-label="{{ Image(post.mission_section_image).alt }}"
      /></div>
    </div>
    <div class="content">
      <h1 class="text--h1 title">
        {{ post.mission_section_title }}
      </h1>
      <p class="text--body body" style="white-space: pre-line;">
        {{ post.mission_section_body }}
      </p>
    </div>
  </div>
</section>

<section id="members">
  <div class="content-wrapper split--content-wrapper pad flex-parent">
    <div class="img-wrapper">
      <div
        class="purpose-img img img-background"
        style="background-image: url({{
          Image(post.member_section_image).src
        }});"
        aria-label="{{ Image(post.member_section_image).alt }}"
      ></div>
    </div>
    <div class="content">
      <h1 class="text--h1 title">
        {{ post.members_section_title }}
      </h1>
      <p class="text--body body" style="white-space: pre-line;">
        {{ post.members_section_body }}
      </p>
      <div class="cta-wrapper">
        <a class="cta" href="{{ site.link }}/apply"
          ><button class="btn">
            {{ post.members_section_cta_label }}
          </button></a
        >
      </div>
    </div>
  </div>
</section>

<section id="process" class="pos-rel">
  <div class="content-wrapper split--content-wrapper reverse pad flex-parent">
    <div class="img-wrapper">
      <div
        class="purpose-img img img-background"
        style="background-image: url({{
          Image(post.process_section_image).src
        }});"
        aria-label="{{ Image(post.process_section_image).alt }}"
      /></div>
    </div>
    <div class="content">
      <h1 class="text--h1 title">
        {{ post.process_section_title }}
      </h1>
      <p class="text--body body" style="white-space: pre-line;">
        {{ post.process_section_body }}
      </p>
      <div class="cta-wrapper">
        <a id="process_show_graphic" class="cta basiclightbox" lightbox-img="{{ Image(post.process_section_main_diagram).src }}" href="#"
          ><button class="btn">
            {{ post.process_section_cta_label }}
          </button></a
        >
      </div>
    </div>
  </div>
</section>

<section id="about--team-roster">
  <div class="heading-content pad">
    <h2 class="text--h1 text-center title">{{ post.teams_section_title }}</h2>
  </div>

  {% for team in post.meta('teams_list') %}
  <div
    class="content-wrapper split--content-wrapper about--teams--content-wrapper pad pad-right-0 flex-parent img-left"
  >
    <div class="content">
      <h1 class="text--h2 title">
        {{ Term(team.team).title }}
      </h1>
      <p class="text--body body" style="white-space: pre-line;">
        {{ team.body_text }}
      </p>
      <div class="cta-wrapper">
        <a class="cta" href="{{ site.link }}/apply#{{ Term(team.team).slug }}"
          ><button class="btn">
            Apply now
          </button></a
        >
      </div>
    </div>

    <div
      class="img-wrapper hide-md"
      style="background-image: url('{{ Image(team.image).src }}')"
      title="{{ Image(team.image).alt }}"
    ></div>
  </div>
  {% endfor %}
</section>

<section id="about--employers" class="about--employer--section">
  <div class="heading-content pad flex-parent flex-col">
    <h2 class="text--h1 title">
      {{ post.employer_section_title }}
    </h2>
    <p class="text--body body">{{ post.employer_section_body }}</p>
  </div>

  <div class="employer--section--carousel">
    <div class="employer--section--carousel-wrapper flex-parent flex-ac">
      {% for logo in post.meta('logo_list') %}
      <img
        class="employer--logo"
        src="{{ Image(logo.logo).src }}"
        alt="{{ Image(logo.logo).alt }}"
        title="{{ Image(logo.logo).title }}"
      />
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}
